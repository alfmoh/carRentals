@model IEnumerable<CarsRental.Models.Car>
@{
    ViewBag.Title = "Cars";
}

<h2>Cars</h2>


<table id="cars" class="table table-bordered table-hover">
    
    <thead>
    <tr>
        <th>Car</th>
        <th>Model</th>
    </tr>
    </thead>
    <tbody>
    </tbody>

</table>

@section scripts
{
    <script>
        $(document)
            .ready(function () {
                var table = $("#cars").DataTable({
                    ajax: {
                        url: "/api/cars",
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "carBrand.name"                           
                        }
                    ]
                });
            });
    </script>
}

