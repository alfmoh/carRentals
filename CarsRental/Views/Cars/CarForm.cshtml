@model CarsRental.ViewModels.CarFormViewModel
@{
    ViewBag.Title = "CarForm";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Cars"))
{
    @Html.ValidationSummary(true,"Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(c => c.Name)
        @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.ReleaseDate)
        @Html.TextBoxFor(c => c.ReleaseDate, "{0:d MMM yyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.DateAdded)
        @Html.TextBoxFor(c => c.DateAdded ,"{0:d MMM yyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.DateAdded)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.CarBrandId)
        @Html.DropDownListFor(c=>c.CarBrandId,new SelectList(Model.CarBrand,"Id","Name"),"Select Car Model",new {@class="form-control"})
        @Html.ValidationMessageFor(c=>c.CarBrandId)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.NumberInStock)
        @Html.TextBoxFor(c => c.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(c=>c.NumberInStock)
    </div>

    @Html.HiddenFor(c=>c.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
